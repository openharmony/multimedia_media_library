import("//build/test.gni")
import("//foundation/multimedia/media_library/media_library.gni")

group("unittest") {
  testonly = true

  deps = [ ":media_common_utils_test" ]
}

ohos_unittest("media_common_utils_test") {
  module_out_path = "media_library/media_library_asset"
  include_dirs = [
    "./include",
    "${MEDIALIB_COMMON_PATH}/utils/include",
    "${MEDIALIB_ROOT_PATH}/interfaces/inner_api/media_library_helper/include",
    "${MEDIALIB_UTILS_PATH}/include",
  ]

  sources = [ 
    "./src/media_string_utils_test.cpp",
    "./src/media_path_utils_test.cpp",
    "./src/media_uri_utils_test.cpp",
    "./src/media_pure_file_utils_test.cpp",
    "./src/media_time_utils_test.cpp",
  ]
  deps = [
    "${MEDIALIB_COMMON_PATH}:media_library_common",
  ]

  external_deps = [
    "c_utils:utils",
    "ability_base:zuri",
    "hilog:libhilog",
    "relational_store:native_rdb",
  ]

  sanitize = {
    cfi = true
    cfi_cross_dso = true
    debug = false
  }

  resource_config_file =
      "${MEDIALIB_INNERKITS_PATH}/test/unittest/resources/ohos_test.xml"
}
