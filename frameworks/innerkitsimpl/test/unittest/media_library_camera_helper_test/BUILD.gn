import("//build/test.gni")
import("//foundation/multimedia/media_library/media_library.gni")

group("unittest") {
  testonly = true

  deps = [ ":media_library_camera_helper_test" ]
}

ohos_unittest("media_library_camera_helper_test") {
  module_out_path = "media_library/media_library_asset"

  include_dirs = [
    "./include",
    "../medialibrary_unittest_utils/include",
    "${MEDIALIB_COMMON_PATH}/utils/include",
    "${MEDIALIB_INNERKITS_PATH}/media_library_helper/include",
    "${MEDIALIB_INTERFACES_PATH}/inner_api/media_library_helper/include",
    "${MEDIALIB_INTERFACES_PATH}/inner_api/media_library_helper/include/enum",
    "${MEDIALIB_UTILS_PATH}/include",
  ]

  cflags = [ "-fno-access-control" ]

  sources = [
    "./src/media_library_camera_helper_test.cpp",
    "../medialibrary_unittest_utils/src/medialibrary_mock_tocken.cpp",
  ]

  deps = [
    "${MEDIALIB_COMMON_PATH}:media_library_common",
    "${MEDIALIB_INNERKITS_PATH}/media_library_camera_helper:media_library_camera_helper",
    "${MEDIALIB_INNERKITS_PATH}/media_library_helper:media_library",
  ]

  external_deps = [
    "ability_base:want",
    "ability_base:zuri",
    "ability_runtime:ability_manager",
    "ability_runtime:abilitykit_native",
    "access_token:libaccesstoken_sdk",
    "access_token:libnativetoken_shared",
    "access_token:libtokensetproc_shared",
    "c_utils:utils",
    "common_event_service:cesfwk_innerkits",
    "data_share:datashare_common",
    "data_share:datashare_consumer",
    "hilog:libhilog",
    "hitrace:hitrace_meter",
    "ipc:ipc_core",
    "relational_store:native_appdatafwk",
    "relational_store:native_dataability",
    "relational_store:native_rdb",
    "safwk:system_ability_fwk",
    "samgr:samgr_proxy",
  ]

  if (!media_library_link_opt) {
    sanitize = {
      cfi = true
      cfi_cross_dso = true
      debug = false
    }
  }

  defines = []
  defines += [ "MEDIA_NATIVE_SA_APP_TEST" ]

  resource_config_file =
      "${MEDIALIB_INNERKITS_PATH}/test/unittest/resources/ohos_test.xml"
}